{
  "name": "shopify-api-monitor",
  "version": "1.0.0",
  "description": "Real-time monitoring and management of Shopify API usage with rate limit tracking, analytics, and notifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dashboard": "ts-node examples/dashboard-example.ts"
  },
  "keywords": [
    "shopify",
    "api",
    "rate-limit",
    "monitoring",
    "analytics",
    "graphql",
    "throttling"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@shopify/shopify-api": "^7.0.0",
    "graphql-request": "^5.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.86",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/shopify-api-monitor.git"
  },
